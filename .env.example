# Template API Server Configuration
API_SERVER_HOST=127.0.0.1
API_SERVER_PORT=8080

# Logging Configuration
API_SERVER_LOG_LEVEL=DEBUG
API_SERVER_SQL_LOG=true

# Database Configuration
# Exemplary database credentials - replace with your actual values
DB_USERNAME=myuser
DB_PASSWORD=mypassword123
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=mydb

# Construct database URLs using the variables above
API_SERVER_DATABASE_URL=postgresql+psycopg://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
API_SERVER_PSQL_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
